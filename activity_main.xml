<!-- res/layout/activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/university_attendance_app"
        android:textSize="25sp"
        android:gravity="center"/>


    <Button
        android:id="@+id/btnTakeAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/take_attendance"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btnViewAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_attendance"
        android:layout_below="@id/btnTakeAttendance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>
</RelativeLayout>